<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:title="@string/settings">
  
	<PreferenceCategory
	   android:title="@string/setting_cat_operation">

		<ListPreference
			android:title="@string/setting_card_dir"
	        android:summary="@string/setting_card_dir_summary"
			android:key="cards_path"
            android:dialogTitle="@string/select_card_dir"
		/>
		
		<EditTextPreference
            android:title="@string/setting_restrict_search"
            android:summary="@string/setting_restrict_search_summary"
            android:key="restrict_search"
            android:defaultValue=""
            android:dialogTitle="@string/setting_restrict_search_title"
            android:dialogMessage="@string/setting_restrict_search_message"
		/>

        <ListPreference
            android:title="@string/setting_cards_to_load"
            android:summary="@string/setting_cards_to_load_summary"
            android:key="cards_to_load"
            android:dialogTitle="@string/select_trade_off"
            android:entries="@array/entries_cards_to_load"
            android:entryValues="@array/values_cards_to_load"
        />

        <Preference
            android:title="@string/setting_keys"
            android:summary="@string/setting_keys_summary"
            android:key="prefKeys"
        />

    </PreferenceCategory>

	<PreferenceCategory
	   android:title="@string/setting_cat_appearance">
    
	    <CheckBoxPreference
			android:summary="@string/setting_center_summary"
			android:key="center"
			android:title="@string/setting_center"
		/>

        <ListPreference
            android:title="@string/setting_font_size"
            android:summary="@string/setting_font_size_summary"
            android:key="card_font_size"
            android:dialogTitle="@string/select_font_size"
            android:entries="@array/entries_font_size"
            android:entryValues="@array/values_font_size"
        />
	
		<CheckBoxPreference
			android:summary="@string/setting_touch_buttons_summary"
			android:key="touch_buttons"
			android:title="@string/setting_touch_buttons"
		/>

        <CheckBoxPreference
            android:summary="@string/setting_two_grading_rows_summary"
            android:key="two_grading_rows"
            android:title="@string/setting_two_grading_rows"
        />

        <ListPreference
            android:title="@string/setting_button_pos"
            android:summary="@string/setting_button_pos_summary"
            android:key="button_pos"
            android:dialogTitle="@string/select_button_pos"
            android:entries="@array/entries_button_pos"
            android:entryValues="@array/values_button_pos"
        />

        <CheckBoxPreference
            android:summary="@string/setting_fullscreen_mode_summary"
            android:key="fullscreen_mode"
            android:title="@string/setting_fullscreen_mode"
        />

    </PreferenceCategory>

    <PreferenceCategory
       android:title="@string/setting_cat_misc">

        <CheckBoxPreference
            android:key="auto_play"
            android:title="@string/setting_auto_play"
            android:summary="@string/setting_auto_play_summary"
            android:defaultValue="true"
        />

    </PreferenceCategory>

</PreferenceScreen>
